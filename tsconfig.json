{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    
    // "lib": [
    //   "dom",
    //   "dom.iterable",
    //   "esnext",
    // ]
    },
    "rootDir": "src",
    "baseUrl": "src",
    "exclude": 
      [
        // "node_modules",
        //  "dist",
          // "example",
          //  "rollup.config.js",
            "**/*.stories.tsx",
             "**/*.test.tsx",
             "**/tests",
             "**/stories",
             "**/setupTests.ts"
            ]

} 