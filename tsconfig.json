{
  "compilerOptions": {
    // Default
    "target": "es5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,

    // Added
    "jsx": "react-jsx", 
    "module": "esnext",  
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
    
   "exclude": 
      [
            "**/*.stories.tsx",
             "**/*.test.tsx",
             "**/tests",
             "**/stories",
             "**/setupTests.ts"
            ]
}